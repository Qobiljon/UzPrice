<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="toshnazarov.uzprice.CurrencyActivity">

    <TextView
        android:id="@+id/textview_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:padding="@dimen/margin_elems"
        android:text="@string/info_title"
        android:textColor="@color/gray"
        android:textSize="@dimen/update_title_size" />

    <Button
        android:id="@+id/button_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/textview_info"
        android:background="@drawable/currency_button_background"
        android:padding="@dimen/margin_elems"
        android:text="USD"
        android:textColor="@color/deep_purple"
        android:textSize="@dimen/update_title_size" />

    <TextView
        android:id="@+id/currency_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_calculator"
        android:layout_below="@+id/button_currency"
        android:gravity="center"
        android:text="1USD = 3000.06 sum"
        android:textColor="@color/teal"
        android:textSize="@dimen/update_title_size" />

    <Button
        android:id="@+id/button_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/currency_button_background"
        android:text="@string/calculator"
        android:textColor="@color/gray"
        android:textSize="@dimen/textview_font_size" />

</RelativeLayout>
